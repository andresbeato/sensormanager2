<h1>Listing concentradors</h1>

<table>
  <thead>
    <tr>
      <th>Categoria equipo</th>
      <th>Nombre</th>
      <th>Descricion</th>
      <th>Estado</th>
      <th>Gis latitud</th>
      <th>Gis longitud</th>
      <th>Mac address</th>
      <th>Numero serie</th>
      <th>Ip address</th>
      <th>Ip port</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @concentradors.each do |concentrador| %>
      <tr>
        <td><%= concentrador.Categoria_equipo %></td>
        <td><%= concentrador.nombre %></td>
        <td><%= concentrador.descricion %></td>
        <td><%= concentrador.estado %></td>
